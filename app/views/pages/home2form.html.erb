                    $(".expanded-content").each(function() {
                      $(this).hide();
                    });   
                }*/

                var parent = _clicked.closest(".expandable-content-block");
                $(".expanded-content", parent).show();
                _clicked.hide();

            });

            // handle "Show Less" button click
            $(".hide-content").click(function (e) {
